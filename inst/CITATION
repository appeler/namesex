citHeader("To cite package 'namesex' in publications use:")
     
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)
 
citEntry(entry="Manual",
		  title = "namesex: Predict sex of person based on first name",
		  author = personList(as.person("Gaurav Sood"), as.person("Luke Sonnet")),
		  year = year,
		  note = vers,
		  textVersion =
		  paste("Gaurav Sood and Luke Sonnet (",
				year,
				"). namesex: Predict sex of person based on first name. ",
				vers, ".", sep=""))